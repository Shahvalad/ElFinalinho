@using System.Security.Claims
@model SellYourItemVM

@section SellYourItemStyles{
    <style>

        h2, h3 {
            color: #333;
        }

        img {
            max-width: 100%;
            max-height: 500px;
            height: auto;
            display: block;
            margin: 20px 0;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            display: block;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
}
<main class="page-main">
    <h2>Sell Your Item</h2>

    <div>
        <h3>@Model.MarketItem.TarotCard.Name</h3>
        <img src="~/Images/TarotCards/@Model.MarketItem.TarotCard.Image" alt="image">
        <p>@Model.MarketItem.TarotCard.Description</p>
        <p>Average selling price: @Model.AverageSellingPrice</p>
        <p>Highest selling price: @Model.HighestSellingPrice</p>
        <p>Lowest selling price: @Model.LowestSellingPrice</p>
    </div>

    <form asp-action="SellYourItem" asp-controller="Markets" method="post">
        <input type="hidden" name="CardId" value="@Model.MarketItem.TarotCard.Id" />
        <input type="hidden" name="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
        <div class="form-group half-width">
            <label for="price">Price</label>
            <input type="number" id="price" name="Price" class="form-control" step="0.01" min="0" required />
        </div>
        <div class="form-group half-width">
            <label for="commission">You will get</label>
            <input type="number" id="commission" class="form-control" step="0.01" min="0" disabled />
        </div>

        <button type="submit" class="btn btn-primary">List for Sale</button>
    </form>
</main>
@section SellYourItemScripts {
    <script>
        document.getElementById('price').addEventListener('input', function (e) {
            var price = e.target.value;
            var commission = price * 0.95;
            document.getElementById('commission').value = commission.toFixed(2);
        });
    </script>
}
