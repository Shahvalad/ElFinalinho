@model MarketVM
@section MarketStyles{
    <style>
        .tarot-card-image {
            width: 150px !important;
            height: auto;
        }

        .listing {
            border: 1px solid #ccc; /* adjust as needed */
            padding: 10px; /* adjust as needed */
            margin-bottom: 10px; /* adjust as needed */
        }

        .listing__image img {
            width: 100px; /* adjust as needed */
            height: auto;
        }

        .listing__details {
            margin-left: 20px; /* adjust as needed */
        }
    </style>
}
<main class="page-main">
    <div class="uk-grid uk-grid-stack" data-uk-grid="">
        <div class="uk-width-2-3@l uk-first-column">
            <div class="widjet --filters">
                <div class="widjet__head">
                    <h3 class="uk-text-lead">Market</h3>
                </div>
                <div class="widjet__body">
                    <div class="uk-grid uk-child-width-1-4@xl uk-child-width-1-2@s uk-flex-middle uk-grid-small" data-uk-grid="">
                        <div class="uk-width-1-1 uk-first-column">
                            <div class="search">
                                <div class="search__input"><i class="ico_search"></i><input type="search" name="search" placeholder="Search"></div>
                                <div class="search__btn"><button type="button"><i class="ico_microphone"></i></button></div>
                            </div>
                        </div>
                   
                    </div>
                </div>
            </div>
            <div class="widjet --market">
                @foreach(var marketItem in Model.MarketItems)
                {
                    <div class="widjet__body">
                        <a asp-action="ViewMarketItem" asp-route-id="@marketItem.TarotCard.Id">
                        <div class="widjet-game">
                            <div class="widjet-game__media">
                                <img class="tarot-card-image" src="~/Images/TarotCards/@marketItem.TarotCard.Image" alt="image">
                            </div>                            
                            <div class="widjet-game__info">
                                <div class="widjet-game__title">@marketItem.TarotCard.Name</div>
                                <div class="widjet-game__game-name">@marketItem.TarotCard.Description</div>
                                <div class="widjet-game__starting">Starting at:<b>@marketItem.StartingPrice</b>
                                    <span data-uk-icon="arrow-up" class="uk-icon"><svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><polygon points="10.5,4 15.37,9.4 14.63,10.08 10.5,5.49 6.37,10.08 5.63,9.4"></polygon><line fill="none" stroke="#000" x1="10.5" y1="16" x2="10.5" y2="5"></line></svg></span></div>
                                <div class="widjet-game__quantity">Quantity:<b>@marketItem.Quantity</b></div>
                            </div>
                        </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="uk-width-1-3@l uk-grid-margin uk-first-column">
            <div class="widjet --upload">
                <div class="widjet__head">
                    <a asp-action="ViewYourItems" class="btn btn-outline-dark"><h3 class="uk-text-lead">Sell your item</h3></a>
                </div>
            </div>
            <div class="widjet --upload">
                @if(Model.UsersPendingListings.Count > 0)
                {
                    <div class="widjet__head">
                        <h3 class="uk-text-lead">Your active listings:</h3>
                    </div>
                    @foreach (var listing in Model.UsersPendingListings)
                    {
                        <div class="listing">
                            <div class="uk-flex">
                                <div class="listing__image">
                                    <img src="~/images/TarotCards/@listing.MarketItem.TarotCard.Image" alt="@listing.MarketItem.TarotCard.Name" />
                                </div>
                                <div class="listing__details">
                                    <h3 class="listing__title">@listing.MarketItem.TarotCard.Name</h3>
                                    <p class="listing__description">@listing.MarketItem.TarotCard.Description</p>
                                    <div class="listing__price">Price: <span>@listing.Price</span></div>
                                    <a style="btn btn-outline-dark" asp-action="CancelListing" asp-route-id="@listing.Id">Cancel</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>


        </div>
    </div>
</main>