@model GetGenreDto

<div class="container-fluid">
    <h1>Details</h1>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name :
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description :
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Created At :
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt
        </dd>
        @if (Model.UpdatedAt != null)
        {
            <dt class="col-sm-2">
                Last Update Date:
            </dt>
            <dd class="col-sm-10">
                @Model.UpdatedAt
            </dd>
        }
        @if (Model.DeletedAt != null)
        {
            <dt class="col-sm-2">
                Deletion Date:
            </dt>
            <dd class="col-sm-10">
                @Model.DeletedAt
            </dd>
        }
    </dl>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>