@model List<GetUserDto>

@{
    ViewData["Title"] = "Index";
}
@section ListUsersStyles{
    <style>
        .form-check-input {
            display: none;
        }

        .form-check-label {
            padding-left: 30px;
            position: relative;
        }

            .form-check-label:before {
                content: "";
                display: inline-block;
                width: 20px;
                height: 20px;
                border: 1px solid #ccc;
                position: absolute;
                left: 0;
                top: 0;
                background-color: #fff;
            }

        .form-check-input:checked + .form-check-label:after {
            content: "";
            display: inline-block;
            width: 12px;
            height: 12px;
            background-color: #454d55;
            position: absolute;
            left: 4px;
            top: 4px;
        }

        .form-check {
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #454d55;
            border-color: #454d55;
        }
    </style>
}
<div class="container-fluid">
    <br />
    <h1>List of Users</h1>
    <form asp-action="Index" method="get" class="form-inline float-right">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="User" id="userCheck" name="roles">
            <label class="form-check-label" for="userCheck">
                User
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Admin" id="adminCheck" name="roles">
            <label class="form-check-label" for="adminCheck">
                Admin
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Moderator" id="moderatorCheck" name="roles">
            <label class="form-check-label" for="moderatorCheck">
                Moderator
            </label>
        </div>
        <button type="submit" class="btn btn-primary ml-2">Filter</button>
        <br />
    </form>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Activness</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            <span class="badge @(item.IsActive ? "badge-success" : "badge-danger")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@item.Role</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-cogs"></i> Actions
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.UserId">Details</a>
                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>