@model GetTarotCardDto

<h1>Delete @Model.Name</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Rarity:</strong> @Model.Rarity</p>
                <p class="card-text"><strong>Drop Rate:</strong> @Model.DropRate</p>
                <p class="card-text"><strong>Users who own it:</strong> @Model.OwnedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.Image != null)
        {
            <img src="~/Images/TarotCards/@Model.Image" class="img-fluid" alt="Image of @Model.Name" style="max-width: 300px; max-height: 300px;">
        }
    </div>
</div>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this Tarot Card? This action cannot be undone.
</div>

<form method="post" asp-action="Delete" asp-controller="TarotCards">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@Url.Action("Index", "TarotCards")" class="btn btn-secondary">Cancel</a>
</form>
