@model GetGameDto
@{
    ViewData["Title"] = "Delete";
    if (Model.UpdatedAt != null) { ViewData["Title"] = "Details (Updated)"; }
    string genres = string.Empty;
    var genresList = Model.GameGenres.Select(g => g.Genre.Name).ToList();
    if (genresList.Count() != 0)
    {
        genres = genresList.Aggregate((a, b) => a + ", " + b);
    }
    else
    {
        genres = "No genres";
    }
}

<div class="container mt-4">
    <h1 class="text-danger">Delete</h1>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this game?</h3>

            <h4 class="mt-4">Game Details</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>



                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Images)</dd>

                <dt class="col-sm-2">Publisher</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Publisher.Name)</dd>

                <dt class="col-sm-2">Developer</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Developer.Name)</dd>

                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-2">Is Active</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>

                <dt class="col-sm-2">Created At</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>

                @if (Model.UpdatedAt != null)
                {
                    <dt class="col-sm-2">
                        Last Update Date:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </dd>
                }
                @if (Model.DeletedAt != null)
                {
                    <dt class="col-sm-2">
                        Deletion Date:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DeletedAt)
                    </dd>
                }

                <dt class="col-sm-2">
                    Genres
                </dt>
                <dd class="col-sm-10">
                    @genres
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>