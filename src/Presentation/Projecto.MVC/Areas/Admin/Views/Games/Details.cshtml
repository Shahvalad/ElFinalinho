@model GetGameDto

@{
    ViewData["Title"] = "Details";
    if (Model.UpdatedAt != null) { ViewData["Title"] = "Details (Updated)"; }
    string genres = string.Empty;
    var genresList = Model.GameGenres.Select(g => g.Genre.Name).ToList();
    if (genresList.Count() != 0)
    {
        genres = genresList.Aggregate((a, b) => a + ", " + b);
    }
    else
    {
        genres = "No genres";
    }
}


<div class="container-fluid">
    <h1>Details</h1>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Description :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Images :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Images)
        </dd>
        <dt class="col-sm-2">
            Publisher`s Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
        <dt class="col-sm-2">
            Developers`s Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Current Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Creation Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        @if (Model.UpdatedAt != null)
        {
            <dt class="col-sm-2">
                Last Update Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
        }
        @if (Model.DeletedAt != null)
        {
            <dt class="col-sm-2">
                Deletion Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeletedAt)
            </dd>
        }

        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @genres
        </dd>
    </dl>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>